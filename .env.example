# GitHub API Configuration
GITHUB_TOKEN=your_github_personal_access_token_here
GITHUB_USERNAME=your_github_username_here

# Gemini AI Configuration (if using AI features)
GEMINI_API_KEY=your_gemini_api_key_here

# Next.js Configuration
NEXTAUTH_SECRET=your_nextauth_secret_here
NEXTAUTH_URL=http://localhost:3000

# Database Configuration - Self-hosted PostgreSQL on Coolify AWS
DATABASE_URL=postgresql://username:password@your-coolify-instance.com:5432/portfolio_db?schema=public
# Alternative format: postgresql://username:password@ip-address:5432/portfolio_db?schema=public

# Database Connection Pool (for production)
DATABASE_POOL_SIZE=10
DATABASE_TIMEOUT=30000

# Admin Configuration
ADMIN_EMAIL=admin@yourdomain.com
ADMIN_PASSWORD=your_secure_admin_password_here
DEFAULT_ADMIN_PASSWORD=admin123

# Email Configuration (for contact forms)
SMTP_HOST=your_smtp_host_here
SMTP_PORT=587
SMTP_USER=your_smtp_user_here
SMTP_PASS=your_smtp_password_here

# Analytics Configuration
NEXT_PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX
GOOGLE_SITE_VERIFICATION=your_google_site_verification_code
YANDEX_VERIFICATION=your_yandex_verification_code
BING_VERIFICATION=your_bing_verification_code

# Motia AI Automation Framework Configuration
MOTIA_URL=http://localhost:3001
MOTIA_API_KEY=your_motia_api_key_here
MOTIA_WEBHOOK_SECRET=your_motia_webhook_secret_here

# Deployment Configuration
VERCEL_URL=your_vercel_deployment_url_here
NETLIFY_URL=your_netlify_deployment_url_here
COOLIFY_URL=your_coolify_instance_url_here
